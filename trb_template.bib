journal = {Journal of Cleaner Production},
keywords = {2-Step floating catchment,Accessibility,Gated and opened community,Genetic algorithm,Green land},
mendeley-groups = {Transit Accessibility Article},
pages = {121454},
publisher = {Elsevier Ltd},
title = {{Will the opening community policy improve the equity of green accessibility and in what ways? — Response based on a 2-step floating catchment area method and genetic algorithm}},
url = {https://doi.org/10.1016/j.jclepro.2020.121454},
volume = {263},
year = {2020}
