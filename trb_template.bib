file = {:D\:/MCMP/Article/References/1-s2.0-S2214140517300166-main.pdf:pdf},
issn = {22141405},
journal = {Journal of Transport and Health},
keywords = {Equity,Light rail transit,Livability,Planning,Smart growth,Sustainability,TOD,Urban design},
mendeley-groups = {Transit Accessibility Article},
number = {June},
pages = {100584},
publisher = {Elsevier Ltd},
title = {{Are all transit stations equal and equitable? Calculating sustainability, livability, health, \& equity performance of smart growth \& transit-oriented-development (TOD)}},
url = {https://doi.org/10.1016/j.jth.2019.100584},
volume = {14},
